{
    "name": "lukasbesch/bedrock-plugin-disabler",
    "description": "Disable certain plugins in non-production environments using PHP constants.",
    "type": "wordpress-muplugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Lukas Besch",
            "email": "connect@lukasbesch.com"
        },
        {
            "name": "Kamil Grzegorczyk",
            "email": "kamilgrzegorczyk@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "composer/installers": "^2.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
      "lint": "phpcs",
      "lint:fix": "phpcbf"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    }
}
